{
  "name": "CellExpansionAdvanced",
  "description": "2D Cell Expansion of Nuceli Annotations with advanced options",
  "container-image": {
    "image": "biomero-wk4-containers/w_cellexpansionadvanced",
    "type": "singularity"
  },
  "command-line": "python wrapper.py MAX_PIXELS DISCARD_CELLS_WITHOUT_CYTOPLASM",
  "inputs": [
    {
      "id": "max_pixels",
      "value-key": "@ID",
      "command-line-flag": "--@id",
      "name": "Max pixels",
      "description": "Max pixels to expand the cell with",
      "default-value": 25,
      "set-by-server": false,
      "optional": true,
      "type": "Number"
    },
    {
      "id": "discard_cells_without_cytoplasm",
      "value-key": "@ID",
      "command-line-flag": "--@id",
      "name": "Discard cells without Cytoplasm?",
	    "description": "If true, we will discard cells without cytoplasm",
      "default-value": true,
      "set-by-server": false,
      "optional": true,
      "type": "Boolean"
    }
  ],

  "schema-version": "cytomine-0.1"
}
